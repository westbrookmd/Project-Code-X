@{
    Contact contact = Model.ContactDetail;
}
<h1>Delete Contact Info</h1>
<h2>Are you sure you wish to delete this contact? Once done, this action cannot be undone.</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@contact.ContactId" />
    <input type="hidden" name="confirmedDeletion" value="true" />
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-area="Admin" asp-controller="Contact" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>