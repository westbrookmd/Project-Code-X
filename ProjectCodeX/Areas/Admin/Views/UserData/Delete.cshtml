@{
    User user = Model.UserDetail;
}
<h1>Delete User</h1>
<h2>Are you sure you wish to delete this user? Once done, this action cannot be undone.</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@user.Id"/>
    <input type="hidden" name="confirmed" value="true"/>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-area="Admin" asp-controller="UserData" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>