@{
    User user = Model.UserDetail;
}

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label for="Fname">First Name: </label>
        <input type="text" id="FName" name="FName" class="form-control" value="@user.Fname" />
    </div>

    <div class="form-group">
        <label for="Lname">Last Name: </label>
        <input type="text" id="LName" name="LName" class="form-control" value="@user.Lname"/>
    </div>

    <div class="form-group">
        <label for="Address">Address: </label>
        <input type="text" id="Address" name="Address" class="form-control" value="@user.Address"/>
    </div>

    <div class="form-group">
        <label for="City">City: </label>
        <input type="text" id="City" name="City" class="form-control" value="@user.City"/>
    </div>

    <div class="form-group">
        <label for="State">State: </label>
        <input type="text" id="State" name="State" class="form-control" value="@user.State"/>
    </div>
    <input type="hidden" id="Id" name="Id" value="@user.Id" />
    <button type="submit" class="btn btn-primary">Submit</button>
    <input type="button" class="btn btn-secondary" value="Cancel" onclick="history.back()"/>
</form>