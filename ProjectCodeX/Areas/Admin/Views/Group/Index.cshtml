@{
    List<Group> groups = Model.Groups;
}

<h1>Groups</h1>
<a asp-action="Edit">Create another group</a>
<br />
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>User Count</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (groups is not null)
        {
            @foreach (var group in groups)
            {
                <tr>
                    <td>@group.Name</td>
                    <td>@group.UserCount</td>
                    <td><a asp-action="UserEdit" asp-route-id="@group.Id">Manage User</a></td>
                    <td>
                        <form asp-action="Edit" asp-route-id="@group.Id" method="get">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@group.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>

            }
        }
    </tbody>
</table>