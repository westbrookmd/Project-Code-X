@{
    List<News> news = Model.News;
}

<button class="btn btn-primary"><a asp-controller="News" asp-action="Edit" class="text-light">Add New Article</a></button>
<button class="btn btn-primary"><a asp-controller="News" asp-action="Delete" class="text-light">Delete Article</a></button>

<section class="recentNews">
    <div class="container">
        <h2 class="news-title">Recent News</h2>
        <div class="row">
            @for (int i = 0; i < news.Count; i++)
            {
                <div class=" = ct-blog col-sm-6 col-md-4">
                    <div class="inner">
                        <div class="fauxcrop">
                            <a asp-controller="News" asp-action="Article" asp-route-id="@news[i].ArticleId"><img alt="News Entry" src="~/images/Project_Code-X_Logo.jpg" class="img-fluid card-img" /></a>
                        </div>
                        <div class="ct-blog-content">
                            <div class="ct-blog-date">
                                <span>October</span><strong>12</strong>
                            </div>
                            <h3 class="ct-blog-header">
                                @news[i].Headline
                            </h3>
                        </div>
                        <p class="text-center">@news[i].Summary</p>
                    </div>
                </div>
            }
        </div>
        <div class="btn-news btn-contests">
            <a href="#">VIEW ALL NEWS</a>
        </div>
    </div>
</section>