
<link rel="stylesheet" href="~/css/news.css" />
@model UserViewModel
<!--
    todo: determine layout of User Profile
    todo: create a User Dashboard where users can select options to view/change their profiles/other information
    todo: Change H1 heading to display Username instead of User
-->
@{
    User currentUser;
    string userDisplayValue = "User";
    if (Model.UserDetail is not null)
    {
        currentUser = @Model.UserDetail;
        if (string.IsNullOrEmpty(currentUser.Fname) is not true)
        {
            userDisplayValue = currentUser.Fname;
        }
        else
        {
            userDisplayValue = "";
        }
    }
    else
    {
        currentUser = new();
    }
    
}

<div>
    <h1>Welcome @userDisplayValue!</h1>
    <form id="userForm" asp-action="Edit" method="post">
        <label for="uName">User Name:</label><br />
        <input type="text" id="UserName" name="uName" value="@currentUser.UserName" readonly /><br />
        <label for="uID">User ID:</label><br />
        <input type="text" id="Id" name="Id" value="@currentUser.Id" readonly size="40"/><br />
        <label for="fName">First Name:</label><br />
        <input type="text" id="fName" name="fName" value="@currentUser.Fname" /><br />
        <label for="lName">Last Name:</label><br />
        <input type="text" id="lName" name="lName" value="@currentUser.Lname" /><br />
        <label for="address">Address:</label><br />
        <input type="text" id="address" name="address" value="@currentUser.Address" /><br />
        <label for="city">City:</label><br />
        <input type="text" id="city" name="city" value="@currentUser.City" /><br />
        <label for="state">State:</label><br />
        <input list="states" id="states" name="states" value="@currentUser.State">
        <datalist id="states">
